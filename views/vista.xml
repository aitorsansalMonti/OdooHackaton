<odoo>
    <data>
        <record id="action_projectes" model="ir.actions.act_window">
            <field name="name">Gestor de Projectes</field>
            <field name="res_model">gestor.projectes</field>
            <field name="view_mode">kanban,form</field>
            <field name="view_id" ref="view_projectes_kanban"/>
        </record>

        <record id="view_projectes_form" model="ir.ui.view">
            <field name="name">gestor.form</field>
            <field name="model">gestor.projectes</field>
            <field name="arch" type="xml">
                <form string="Curs Personalitzat">
                    <sheet>
                        <group>
                            <field name="tipus"/>
                            <field name="usuari"/>
                            <field name="creation_date"/>
                            <field name="description"/>
                            <field name="state" readonly="1"/>
                            <field name="observacions" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_projectes_kanban" model="ir.ui.view">
            <field name="name">gestor.kanban</field>
            <field name="model">gestor.projectes</field>
            <field name="arch" type="xml">
                <kanban string="Cursos Personalitzats">
                    <field name="tipus"/>
                    <field name="usuari"/>
                    <field name="creation_date"/>
                    <field name="description"/>
                    <field name="state"/>
                    <field name="observacions"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_details">
                                <div>Tipus: <field name="tipus"/></div>
                                <div>Client: <field name="usuari"/></div>
                                <div>Data Creació: <field name="creation_date"/></div>
                                <div>Estat: <field name="state"/></div>
                                <div>Descripció: <field name="description"/></div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <menuitem id="projectes_main_menu" name="Gestor Projectes"/>
        <menuitem id="projectes_submenu" name="Projectes" parent="projectes_main_menu" 
        action="action_projectes"/>
    </data>
</odoo>
